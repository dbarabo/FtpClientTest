<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/priceName"
        android:text="Мойка кузова Легковой а/м"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:textColor="@color/colorMainTitle"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/priceAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="right|bottom"
        android:text="150,00 руб"
        android:textColor="@color/colorMainTitle"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/priceName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/priceName"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintWidth_percent="0.3" />
    <View
        android:id="@+id/spaceAmount"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="0dp"
        android:gravity="right|bottom"
        android:text="150,00 руб"
        android:textColor="@color/colorMainTitle"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/priceAmount"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/priceName"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintWidth_percent="0.3" />
</android.support.constraint.ConstraintLayout>